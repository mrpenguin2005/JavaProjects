<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<query name="WineBS.retrieveWineList"><![CDATA[
	SELECT wineList
	FROM Wine wineList 
	]]></query>
	
	<query name="WineBS.retrieveWineDTOList"><![CDATA[
	SELECT new music.penguin.dto.WineDTO(wineList)
	FROM Wine wineList 
	WHERE wineList.user.id = :userId
	]]></query>

</hibernate-mapping>